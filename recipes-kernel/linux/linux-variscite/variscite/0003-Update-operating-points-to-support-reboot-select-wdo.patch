From: varigit <ron.d@variscite.com>
Date: Sun, 29 Jun 2014 18:39:27 +0300
Subject: [PATCH 03/13] Update operating-points to support reboot select wdog
 #1

---
 arch/arm/boot/dts/imx6qdl-var-som.dtsi | 11 ++++++++++-
 1 file changed, 10 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/imx6qdl-var-som.dtsi b/arch/arm/boot/dts/imx6qdl-var-som.dtsi
index 146918b..de69fd9 100644
--- a/arch/arm/boot/dts/imx6qdl-var-som.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-var-som.dtsi
@@ -247,6 +247,15 @@
 };
 
 &cpu0 {
+	operating-points = <
+		/* kHz    uV */
+		1200000 1275000
+		996000  1250000
+		852000  1250000
+		792000  1150000
+		396000  1150000
+	>;
+
 	arm-supply = <&sw1a_reg>;
 	soc-supply = <&sw1c_reg>;
 	pu-supply = <&pu_dummy>; /* use pu_dummy if VDDSOC share with VDDPU */
@@ -297,7 +306,7 @@
 	fsl,cpu_pdnscr_iso2sw = <0x1>;
 	fsl,cpu_pdnscr_iso = <0x1>;
 	fsl,ldo-bypass = <1>; 			/* use ldo-bypass, u-boot will check it and configure */
-	fsl,wdog-reset = <2>; 			/* watchdog select of reset source */
+	fsl,wdog-reset = <1>; 			/* watchdog select of reset source */
 	pu-supply = <&reg_pu>; 			/* ldo-bypass:use pu_dummy if VDDSOC share with VDDPU */
 };
 
